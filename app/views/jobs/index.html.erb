<h1>Work Tracker</h1>
<p>The App that helps you keep track of your work!</p>
<p><%= link_to 'New Job', new_job_path %></p>

<table id ="jobs">
  <tr>
    <th>Job</th>
    <th>Status</th>
    <th>Hours</th>
	<th>Cost</th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= link_to job.title, job %> (<%=link_to  job.client.name%>)</td>
    <td><%= job.status %></td>
    <td><%= job.total_time_spent %></td>
	<td><%= number_to_currency(job.total_cost) %></td>
    <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

